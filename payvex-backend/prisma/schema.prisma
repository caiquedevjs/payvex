// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  // Caminho padrão que funciona com a importação do '@prisma/client' no NestJS
  output   = "../node_modules/.prisma/client" 
}

datasource db {
  provider = "postgresql"

  url      = env("DATABASE_URL")
}


// Modelo da Empresa (Tenant)
// É o seu cliente pagante.
model Company {
  id    String @id @default(cuid())
  name  String // Nome Fantasia
  postalCode String
  address String
  neighborhood String
  State String
  City String
  phone String

  // Relacionamentos
  filiais       Filial[]
  users         User[]
  subscription  Subscription?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Modelo da Filial
model Filial {
  id           String        @id @default(cuid())
  name         String
  cnpj         String        @unique
  
  // Configurações de Integração (BYOK - Bring Your Own Key)
  // Deixamos como opcionais pois o cliente pode configurar só um ou outro
  stripeSecretKey      String?   
  stripePublicKey      String?   
  mercadoPagoAccessToken String?
  stripeWebhookSecret String?
  
  // Relacionamentos
  companyId    String
  company      Company       @relation(fields: [companyId], references: [id])
  transactions Transaction[] 

  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  @@index([companyId])
}


// Modelo do Colaborador
// É o usuário que pertence a uma empresa.
model User {
  id            String  @id @default(cuid())
  email         String  @unique
  name          String
  passwordHash  String
  role          Role    @default(USER)

  // Relacionamento com a Empresa
  companyId String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Modelo da Assinatura
// Define o plano e os limites da EMPRESA.
model Subscription {
  id        String  @id @default(cuid())
  planName  String  @default("trial")
  status    String  @default("ativo")
  
  // Nossos limites de quota
  usersLimit        Int @default(3)
  gatewaysLimit     Int @default(1)
  transactionsLimit Int @default(100)
  
  // Relacionamento com a Empresa
  companyId String  @unique
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  nextRenewalAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Transaction {
  id            String      @id @default(cuid())
  amount        Decimal     // Valor bruto (ex: 100.00)
  netAmount     Decimal?    // Valor líquido após taxas (ex: 95.00)
  fee           Decimal?    // Taxa retida pelo gateway
  currency      String      @default("BRL")
  installments  Int         @default(1) // Parcelas
  status        TransactionStatus @default(PENDING)
  paymentMethod PaymentMethod
  
  // Dados do Pagador (Salvando direto aqui para histórico imutável)
  customerName     String?
  customerEmail    String?
  customerDocument String?    // CPF ou CNPJ
  
  // Rastreabilidade do Gateway
  gateway       String      // "STRIPE", "MERCADO_PAGO"
  externalId    String      @unique 
  paymentUrl    String?     // Link do Boleto ou Checkout
  pixQrCode     String?     // Texto do "Copia e Cola" do PIX
  
  // Metadados (JSON bruto para auditoria)
  metadata      Json?
  
  // Relacionamentos
  filialId      String
  filial        Filial      @relation(fields: [filialId], references: [id])
  
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@index([filialId])
  @@index([externalId])
  @@index([status]) // Indexar status é ótimo para filtros no Dashboard
}

// Enum para os papéis de usuário
enum Role {
  ADMIN
  USER
}


// Definição dos Estados da Transação
enum TransactionStatus {
 PENDING
  PAID
  FAILED
  EXPIRED
  CANCELED
}

// Definição dos Métodos de Pagamento suportados
enum PaymentMethod {
  PIX
  CREDIT_CARD
  BOLETO
}